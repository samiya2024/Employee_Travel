@model ETB_Today.travelrequest

@{
    ViewBag.Title = "Edit";
}

<h2>Travel Request cancellation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.approvalstatus, "Please select option to cancel your request: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.approvalstatus, new SelectList(new[] { "Cancelled" }), "-- Select Option --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.approvalstatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
