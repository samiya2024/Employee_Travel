@model ETB_Today.travelrequest

@{
    ViewBag.Title = "Details";
}

<style>
    .row {
        border-bottom: 1px solid #dee2e6; /* Add border to each row */
        padding: 5px 0; /* Add padding to each row */
    }

    .col-sm-4, .col-sm-8 {
        padding: 10px; /* Add padding to each column */
        border-right: 1px solid #dee2e6; /* Add border to each column */
    }

    .col-sm-8:last-child, .col-sm-4:last-child {
        border-right: none; /* Remove border from last column in each row */
    }
</style>

<h2>Travel Request Details</h2>

<div class="card">
    <div class="card-body">
        <hr />
        <dl class="row">
            <div class="row">
                <dt class="col-sm-4">First Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.employeename)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.employeeemail)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Reason for Travel:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.reasonfortravel)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Flight Needed:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.flightneeded)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Hotel Needed:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.hotelneeded)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Departure City:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.departurecity)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Arrival City:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.arrivalcity)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Departure Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.departuredate)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Departure Time:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.departuretime)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Additional Information:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.additionalinformation)</dd>
            </div>

            <div class="row">
                <dt class="col-sm-4">Approval Status:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.approvalstatus)</dd>
            </div>
        </dl>
    </div>
</div>

<p class="mt-3">
    @Html.ActionLink("Back to Dashboard", "Index", new { @class = "btn btn-secondary" })
</p>
