@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Agent Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px; /* Increase the width of the container */
            margin: auto; /* Horizontally center the container */
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #007bff; /* Change the title color */
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 10px; /* Increase margin bottom */
            color: #333; /* Change the label color */
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px; /* Increase padding */
            margin-bottom: 20px; /* Increase margin bottom */
            border: 1px solid #ccc;
            border-radius: 5px;
            justify-content: center;
            box-sizing: border-box;
        }

        input[type="submit"] {
            width: 100%;
            padding: 12px; /* Increase padding */
            background-color: #007bff;
            color: #fff;
            justify-content: center;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .error-message {
            color: red;
            margin-top: 10px;
            text-align: center; /* Center align error messages */
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Travel Agent Login</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-message">@TempData["ErrorMessage"]</div>
        }
        <form method="post" action="@Url.Action("Login", "TravelAgentDashboard")">
            @Html.AntiForgeryToken() <!-- Include anti-forgery token -->
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <input type="submit" value="Login">
        </form>

    </div>
</body>
</html>
